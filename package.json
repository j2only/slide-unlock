{
    "name": "vue-slide-unlock",
    "version": "0.4.2",
    "description": "Vue.js slide to unlock component. Protect users from accidental clicks or protect your web app from bot attack.",
    "author": {
        "name": "Anton Zolotov",
        "email": "antonzolotov@outlook.com"
    },
    "type": "module",
    "files": [
        "dist"
    ],
    "main": "dist/vue-slide-unlock.umd.js",
    "module": "dist/vue-slide-unlock.es.js",
    "types": "dist/types/index.d.ts",
    "workspaces": [
        "demo"
    ],
    "scripts": {
        "dev": "vite",
        "build": "vite build && yarn build:types",
        "build:types": "vue-tsc --project tsconfig.types.json --declaration --emitDeclarationOnly --outDir dist/types ",
        "typecheck": "vue-tsc --project tsconfig.types.json --noEmit",
        "demo": "yarn workspace demo generate",
        "lint": "npm run lint:js && npm run lint:style",
        "lint:js": "eslint --fix --ext .js,.vue --ignore-path .eslintignore .",
        "lint:style": "stylelint **/*.{vue,css,scss} --ignore-path .gitignore --fix --config ./.stylelintrc-format",
        "test": "vitest --run",
        "test:e2e": "cypress run --component",
        "make-badges": "istanbul-badges-readme"
    },
    "nyc": {
        "reporter": [
            "html",
            "json-summary"
        ],
        "extension": [
            ".js",
            ".ts",
            ".vue"
        ]
    },
    "dependencies": {
        "easy-ease": "^1.0.9",
        "lodash.debounce": "^4.0.8"
    },
    "devDependencies": {
        "@babel/types": "^7.21.3",
        "@cypress/code-coverage": "^3.10.0",
        "@types/lodash.debounce": "^4.0.7",
        "@types/node": "^18.15.9",
        "@vitejs/plugin-vue": "^4.1.0",
        "@vitest/coverage-istanbul": "^0.29.7",
        "@vue/test-utils": "^2.3.2",
        "@vue/tsconfig": "^0.1.3",
        "cypress": "^12.8.1",
        "cypress-real-events": "^1.7.6",
        "eslint": "^8.36.0",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^6.1.1",
        "eslint-plugin-standard": "^5.0.0",
        "eslint-plugin-vue": "^9.10.0",
        "istanbul-badges-readme": "^1.8.5",
        "istanbul-lib-coverage": "^3.2.0",
        "jsdom": "^21.1.1",
        "lint-staged": "^13.2.0",
        "nyc": "^15.1.0",
        "postcss": "^8.4.21",
        "postcss-html": "^1.5.0",
        "sass": "^1.60.0",
        "stylelint": "^15.3.0",
        "stylelint-config-property-sort-order-smacss": "^9.1.0",
        "stylelint-config-standard-scss": "^7.0.1",
        "stylelint-order": "^6.0.3",
        "stylelint-scss": "^4.5.0",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.5",
        "vite": "^4.2.1",
        "vite-plugin-istanbul": "^4.0.1",
        "vite-plugin-style-inject": "^0.0.1",
        "vitest": "^0.29.7",
        "vue": "^3.2.47",
        "vue-tsc": "^1.3.6"
    },
    "bugs": {
        "url": "https://github.com/joseph2/vue-slide-unlock/issues"
    },
    "homepage": "https://joseph2.github.io/vue-slide-unlock/",
    "keywords": [
        "vue",
        "slide",
        "swipe",
        "unlock"
    ],
    "license": "MIT",
    "packageManager": "yarn@3.4.1",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/joseph2/vue-slide-unlock.git"
    }
}
